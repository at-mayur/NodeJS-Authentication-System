<!-- Page to reset password
page after clicking reset password link -->

<link rel="stylesheet" href="/css/formStyles.css">

<div class="container">

    <div class="row">

        <div class="col-10 col-md-8 col-lg-6 bg-white rounded-4 mx-auto">

            <h1 class="mt-4 mb-3 text-center">Reset Password</h1>

            <% if(locals.user && !user.social_login){ %>

                <!-- if user exists and user is not logged in using google then display form -->
                <form action="/user/reset-password-action" class="fs-5" method="post">

                    <input type="hidden" value="<%= user.id %>" name="userId" >

                    <div class="mt-3">
                        <label class="form-label" for="user-curr-password">Current Password</label>
                        <input type="password" id="user-curr-password" name="userCurrPassword" class="form-control form-control-lg" required>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" for="user-new-password">New Password</label>
                        <input type="password" id="user-new-password" name="userNewPassword" class="form-control form-control-lg" required>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" for="cnf-password">Confirm New Password</label>
                        <input type="password" id="cnf-password" name="cnfNewPassword" class="form-control form-control-lg" required>
                    </div>

                    <button type="submit" class="btn fs-4 mt-3 d-block mx-auto">Reset Password</button>
                </form>

            <% } else{ %>

                <h6>Either, you are not authorised to view this page or You have logged in using Google..!!</h6>

            <% } %>

        </div>

    </div>

</div>