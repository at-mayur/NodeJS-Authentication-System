<!-- Page for resetting forgot password
page after clicking link received -->


<link rel="stylesheet" href="/css/formStyles.css">

<div class="container">

    <div class="row">

        <div class="col-10 col-md-8 col-lg-6 bg-white rounded-4 mx-auto">

            <h1 class="mt-4 mb-3 text-center">Reset Password</h1>

            <% if(locals.token){ %>

                <!-- Form to submit new password with token id -->
                <form action="/user/forgot-password-reset-action" class="fs-5" method="post">

                    <input type="hidden" name="tokenId" value="<%= token.id %>" >

                    <div class="mt-3">
                        <label class="form-label" for="user-new-password">New Password</label>
                        <input type="password" id="user-new-password" name="userPassword" class="form-control form-control-lg" required>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" for="cnf-password">Confirm New Password</label>
                        <input type="password" id="cnf-password" name="cnfPassword" class="form-control form-control-lg" required>
                    </div>

                    <button type="submit" class="btn fs-4 mt-3 d-block mx-auto">Reset Password</button>
                </form>

            <% } else{ %>

                <!-- if token does not exist then display this msg -->
                <h6>You are not authorised to view this page.</h6>

            <% } %>

        </div>

    </div>

</div>